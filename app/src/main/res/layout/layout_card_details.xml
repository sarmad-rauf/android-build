    <ImageView
        android:id="@+id/ivCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_card_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.es.marocapp.widgets.MarocRegularTextView
        android:id="@+id/tvCardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_23sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:text="Your Wallet"
        android:textColor="#ffff"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintStart_toStartOf="@+id/ivCard"
        app:layout_constraintTop_toTopOf="@+id/ivCard" />

    <com.es.marocapp.widgets.MarocRegularTextView
        android:id="@+id/tvCardNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:text="**** **** **** 1234"
        android:textColor="#ffff"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintStart_toStartOf="@+id/tvCardTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvCardTitle" />

    <com.es.marocapp.widgets.MarocRegularTextView
        android:id="@+id/tvTitleBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:text="Balance"
        android:textColor="#ffff"
        android:textSize="@dimen/_20ssp"
        app:layout_constraintBottom_toTopOf="@+id/tvCardBalance"
        app:layout_constraintStart_toStartOf="@+id/tvCardNumber"
        app:layout_constraintTop_toBottomOf="@+id/tvCardNumber" />

    <com.es.marocapp.widgets.MarocMediumTextView
        android:id="@+id/tvCardBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_25sdp"
        android:text="DH 1,200"
        android:textColor="#ffff"
        android:textSize="@dimen/_30ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ivCard"
        app:layout_constraintStart_toStartOf="@+id/tvCardNumber" />

    <!--        </androidx.constraintlayout.widget.ConstraintLayout>-->

