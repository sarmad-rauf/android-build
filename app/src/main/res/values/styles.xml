<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Spinner" parent="Widget.AppCompat.Spinner">
        <item name="backgroundTint">@color/colorBlack</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="QuickAmountSpinner" parent="Widget.AppCompat.Spinner">
        <item name="backgroundTint">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="QuickAcountTypeSpinner" parent="Widget.AppCompat.Spinner">
        <item name="backgroundTint">@color/colorBlack</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="Widget.Design.TextInputLayout" parent="AppTheme">
        <item name="hintTextAppearance">@style/AppTheme.TextFloatLabelAppearance</item>
        <item name="errorTextAppearance">@style/AppTheme.TextErrorAppearance</item>
        <item name="counterTextAppearance">@style/TextAppearance.Design.Counter</item>
        <item name="counterOverflowTextAppearance">@style/TextAppearance.Design.Counter.Overflow</item>
    </style>

    <style name="myTextInputLabel" parent="TextAppearance.AppCompat">
        <!-- Customize your theme here. -->
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="colorControlNormal">@color/colorEditTextGreyMedium</item>
        <item name="colorControlActivated">@color/colorCerulean</item>
    </style>

    <style name="AppTheme.TextFloatLabelAppearance" parent="TextAppearance.Design.Hint">
        <!-- Floating label appearance here -->
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/_16ssp</item>

    </style>

    <style name="AppTheme.TextErrorAppearance" parent="TextAppearance.Design.Error">
        <!-- Error message appearance here -->
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/colorWhite</item> <!-- for uncheck state -->
        <item name="android:textColorSecondary">@color/colorWhite</item> <!-- for check state -->
    </style>

    <style name="checkBoxStyleBillPayment" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/colorOrangeLight</item> <!-- for uncheck state -->
        <item name="android:textColorSecondary">@color/colorTextGreyMedium</item> <!-- for check state -->
    </style>

    <style name="LanguageChangeRadioButtons" parent="Theme.AppCompat.Light">
        <!--<item name="colorControlNormal">@color/colorTextGreyMedium</item>
        <item name="colorControlActivated">@color/colorTextOrange</item>-->
        <item name="colorAccent">@color/colorTextGreyMedium</item>
        <item name="android:textColorSecondary">@color/colorTextGreyMedium</item>
        <item name="colorControlNormal">@color/colorTextOrange</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#0283c6</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#0283c6
        </item>
    </style>

</resources>
